<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/opening_screen"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/addWorkout"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="415dp"
        android:onClick="onAddWorkoutButtonPress"
        android:text="@string/addWorkout" />

    <Button
        android:id="@+id/seePreviousWorkouts"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="350dp"
        android:onClick="onSeePreviousWorkoutsButtonPress"
        android:text="@string/seePreviousWorkouts" />

    <Button
        android:id="@+id/quit"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="285dp"
        android:onClick="onQuitButtonPress"
        android:text="@string/quit" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:text="@string/welcome" />

</RelativeLayout>