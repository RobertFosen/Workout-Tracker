<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/opening_screen"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/addWorkout"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="415dp"
        android:onClick="onAddWorkoutButtonPress"
        android:text="@string/addWorkout"
        android:background="@drawable/my_button_bg" />

    <Button
        android:id="@+id/seePreviousWorkouts"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="350dp"
        android:onClick="onSeePreviousWorkoutsButtonPress"
        android:text="@string/seePreviousWorkouts"
        android:background="@drawable/my_button_bg"/>

    <Button
        android:id="@+id/quit"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="285dp"
        android:onClick="onQuitButtonPress"
        android:text="@string/quit"
        android:background="@drawable/my_button_bg"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="692dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:text="@string/welcome"
        android:textColor="@android:color/white" />

</RelativeLayout>